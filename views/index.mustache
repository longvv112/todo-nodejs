<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <style>
        ul.list-todo > li > * {
            display: inline-block;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <p> Logged in by
        {{#currentUser}}
        {{username}}
        {{/currentUser}}
        . <a href="/logout">Logout</a>
        </p>
        
        <form action="/todos" method="post" class="form-inline" name="form-add">
            <input type="text" name="description" class="mx-sm-3 form-control">
            <button type="submit" class="btn btn-secondary">Add</button>
        </form>


        <ul class="list-todo mt-3">
            {{#todos}}
            <li class="mb-2">
                <div class="col-sm-4">{{description}}</div>
                <form action="/todos/{{_id}}/completed" method="post" class="col-auto" name="form-complete">
                    <button type="submit" class="btn btn-success btn-sm">Complete</button>
                </form>

                <a href="/todos/{{_id}}/deleted" class="btn btn-danger btn-sm">Delete</a>
            </li>
            {{/todos}}
        </ul>

        <h3>Done</h3>
        <ul>
            {{#doneTodos}}
            <li>
                <form action="/todos/{{_id}}/completed" method="post" class="form-inline mb-2" class="form-undo">
                    <div class="col-sm-4">
                        {{description}}
                    </div>
                    <button type="submit" class="btn btn-outline-secondary col-auto ml-3 btn-sm">Undo</button>
                </form>
            </li>
            {{/doneTodos}}
        </ul>

    </div>
</body>

</html>